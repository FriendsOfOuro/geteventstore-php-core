{
    "name": "dbellettini/eventstore-client",
    "description": "EventStore client for PHP",
    "type": "library",
    "keywords": [
        "eventsourcing",
        "eventstore"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Davide Bellettini",
            "email": "davide@bellettini.me",
            "homepage": "http://bellettini.me/"
        },
        {
            "name": "NicolÃ² Pignatelli",
            "email": "pignatelli.nicolo@gmail.com",
            "homepage": "http://nicolopignatelli.me/"
        },
        {
            "name": "Contributors",
            "homepage": "https://github.com/dbellettini/php-eventstore-client/graphs/contributors"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "~6.0",
        "ramsey/uuid": "~2.8",
        "marc-mabe/php-enum": "~2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "@stable"
    },
    "suggest": {
        "dbellettini/broadway-eventstore": "Integrate Event Store with Broadway",
        "dbellettini/eventstore-client-bundle": "Integrate Event Store with Symfony 2"
    },
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-0": {
            "EventStore": "src/",
            "ValueObjects": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "EventStore": "tests/",
            "ValueObjects": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.5.x-dev"
        }
    }
}
